<Application x:Class="TSS.Wpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="WindowMainMenu.xaml">

    <Application.Resources>
        <Style x:Key="defStyle" TargetType="{x:Type Window}">
            <Setter Property="FontFamily" Value="Cambria" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="Icon" Value="tss_icon.ico" />
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}" />
        </Style>
    </Application.Resources>
</Application>
